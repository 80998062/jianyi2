<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="detail_action_button">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/detail_action_button_text</item>
        <item name="android:drawablePadding">@dimen/content_space_4</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="detail_action_button_text">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:fontFeatureSettings">smcp, onum</item>
        <item name="android:letterSpacing">0.02</item>
    </style>


    <plurals name="likes">
        <item quantity="zero">no likes</item>
        <item quantity="one">%s like</item>
        <item quantity="other">%s likes</item>
    </plurals>
    <plurals name="views">
        <item quantity="zero">no views</item>
        <item quantity="one">%s view</item>
        <item quantity="other">%s views</item>
    </plurals>
    <string name="share">分享</string>
    <string name="hint_reply">在这里留言</string>

    <style name="comment_list_item_button">
        <item name="android:clickable">true</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

</resources>