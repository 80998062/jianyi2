<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FAB">
        <item name="android:id">@id/fab</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="FAB.Large" parent="FAB">
        <item name="android:layout_width">@dimen/fab_large</item>
        <item name="android:layout_height">@dimen/fab_large</item>

    </style>

    <style name="FAB.Small" parent="FAB">
        <item name="android:layout_width">@dimen/fab_small</item>
        <item name="android:layout_height">@dimen/fab_small</item>
    </style>

    <style name="view_animator">
        <item name="android:inAnimation">@android:anim/fade_in</item>
        <item name="android:outAnimation">@android:anim/fade_out</item>
    </style>

    <!-- ============================ -->
    <!-- 自定义背景 Button -->
    <!-- ========================== -->
    <eat-comment/>

    <style name="custom_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/material_text_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:padding">@dimen/content_space_16</item>
    </style>

    <style name="custom_button.outline">
        <item name="android:background">@drawable/selector_button_outline</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="custom_button.fill">
        <item name="android:background">@drawable/selector_button_fill</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="input_text_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_rect_white</item>
        <item name="android:paddingLeft">@dimen/content_space_16</item>
        <item name="android:paddingRight">@dimen/content_space_16</item>
        <item name="android:paddingTop">@dimen/content_space_8</item>
        <item name="android:paddingBottom">@dimen/content_space_16</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="form_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/content_space_8</item>
        <!--<item name="android:textColorHighlight">@color/colorAccent</item>-->
        <item name="android:textColor">@color/text_secondary_dark</item>
        <!--<item name="android:textColorHint">@color/colorAccent</item>-->
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>


    <style name="form_edit_text.singline">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>



</resources>