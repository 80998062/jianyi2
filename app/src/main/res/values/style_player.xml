<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="player_tab_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabMinWidth">@dimen/tab_min_width</item>
        <item name="tabPadding">@dimen/content_space_8</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
        <item name="tabTextAppearance">@style/player_tab_text_appearance</item>
        <item name="tabTextColor">@color/grey_600</item>
    </style>

    <style name="player_tab_text_appearance">
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="player_tab_text">
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:gravity">center</item>
    </style>

    <eat-comment/>
    <style name="player_edit_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">text</item>
    </style>
</resources>