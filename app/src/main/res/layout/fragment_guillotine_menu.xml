<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <View
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/colorPrimary"
            android:transitionName="@string/transition_reveal_view"/>

        <com.sinyuk.jianyi.widgets.MyCircleImageView
            android:id="@+id/avatar"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginTop="-74dp"
            tools:src="@drawable/girl"
            android:transitionName="@string/transition_avatar"
            app:border_color="@color/white"
            app:border_width="3dp"/>

        <TextView
            android:id="@+id/user_name_tv"
            style="@style/guillotine_menu_text"
            android:layout_marginTop="28dp"
            android:textSize="@dimen/material_text_display2"
            android:textStyle="bold"
            android:transitionName="@string/transition_username"
            tools:text="乔昔之"/>

        <TextView
            android:id="@+id/school_tv"
            style="@style/guillotine_menu_text"
            android:layout_marginTop="@dimen/content_space_4"
            android:textColor="@color/grey_600"
            android:textSize="@dimen/material_text_caption1"
            android:transitionName="@string/transition_school"
            tools:text="浙江传媒学院"/>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:paddingTop="@dimen/content_space_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inbox_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="@dimen/content_space_8"
                android:gravity="center"
                android:padding="@dimen/content_space_4"
                android:text="我的消息"
                android:textSize="@dimen/material_text_title"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/profile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_profile_grey"
                android:drawablePadding="@dimen/content_space_8"
                android:gravity="center"
                android:padding="@dimen/content_space_4"
                android:text="个人中心"
                android:textSize="@dimen/material_text_title"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/exit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_close"
                android:drawablePadding="@dimen/content_space_8"
                android:gravity="center"
                android:padding="@dimen/content_space_4"
                android:text="退出登录"
                android:textSize="@dimen/material_text_title"
                android:textStyle="bold"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>