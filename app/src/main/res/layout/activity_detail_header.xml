<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/ic_account_grey600_24dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_space_8"
        android:layout_marginRight="@dimen/content_space_8"
        android:layout_marginTop="@dimen/content_space_4"
        android:layout_weight="1"
        android:orientation="vertical"
        android:transitionName="@string/transition_avatar">

        <com.sinyuk.jianyi.widgets.BaselineGridTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="1sp"
            android:textColor="@color/text_primary_dark"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="Material Design Todo List"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">
            <com.sinyuk.jianyi.widgets.BaselineGridTextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/content_space_16"
                android:includeFontPadding="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/material_text_body1"
                android:textStyle="bold"
                tools:text="100,0"/>

            <com.sinyuk.jianyi.widgets.BaselineGridTextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/material_text_caption2"
                tools:text="波哥"/>

            <com.sinyuk.jianyi.widgets.BaselineGridTextView
                android:id="@+id/pub_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_space_8"
                android:textColor="@color/colorPrimaryLt"
                android:textSize="@dimen/material_text_caption1"
                tools:text="几天前"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>