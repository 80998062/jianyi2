<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    style="@style/good_list_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPaddingBottom="@dimen/content_space_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sinyuk.jianyi.widgets.RatioImageView
            android:id="@+id/shot_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:ratio="1.28"
            tools:src="@drawable/backdrop_2"/>

        <com.sinyuk.jianyi.widgets.LabelView
            android:id="@+id/new_price_label_view"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:lv_background_color="@color/colorPrimary"
            app:lv_gravity="TOP_RIGHT"
            app:lv_text_bold="true"
            app:lv_text_size="@dimen/material_text_caption1"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shot_iv"
            android:layout_marginLeft="@dimen/content_space_8"
            android:layout_marginRight="@dimen/content_space_8"
            android:layout_marginTop="@dimen/content_space_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/material_text_body2"
            tools:text="string/dummy_thrift_description"/>


        <ImageView
            android:id="@+id/avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/title_tv"
            android:layout_marginRight="@dimen/content_space_8"
            android:layout_marginTop="@dimen/content_space_8"
            tools:src="drawable/expression_65"/>

        <TextView
            android:id="@+id/user_name_tv"
            style="@style/SingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/avatar"
            android:layout_marginRight="@dimen/content_space_8"
            android:layout_marginTop="@dimen/content_space_2"
            android:layout_toLeftOf="@+id/avatar"
            android:textColor="@color/grey_600"
            android:textSize="@dimen/material_text_caption2"
            android:textStyle="bold"
            tools:text="string/user_name"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>