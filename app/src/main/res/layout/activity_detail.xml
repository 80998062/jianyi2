<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:contentScrim="@color/white"
            app:layout_scrollFlags="snap|scroll|enterAlways|enterAlwaysCollapsed"
            app:titleEnabled="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">

                    <com.sinyuk.jianyi.widgets.RatioImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        app:ratio="0.75"/>

                    <android.support.v4.view.ViewPager
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:background="#ccc"/>
                </FrameLayout>


                <include
                    layout="@layout/activity_detail_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_space_16"
                    android:layout_marginRight="@dimen/content_space_16"
                    android:layout_marginTop="@dimen/content_space_8"/>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@null"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <ImageView
                    android:id="@+id/back_btn"
                    style="@style/toolbar_button"
                    android:src="@drawable/ic_arrow_back_primary_24dp"/>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_space_16"
            android:layout_marginRight="@dimen/content_space_16"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.sinyuk.jianyi.widgets.BaselineGridTextView
                    android:id="@+id/like_btn"
                    style="@style/detail_action_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    tools:drawableTop="@drawable/avd_likes"
                    tools:text="1234 likes"/>

                <!--<io.plaidapp.ui.widget.BaselineGridTextView-->
                <!--android:id="@+id/followers_count"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:drawableTop="@drawable/ic_followers_24dp"-->
                <!--android:background="@null"-->
                <!--tools:text="1337 followers"-->
                <!--style="@style/Widget.Plaid.InlineActionButton" />-->

                <!--<io.plaidapp.ui.widget.BaselineGridTextView-->
                <!--android:id="@+id/likes_count"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_marginBottom="@dimen/spacing_normal"-->
                <!--android:drawableTop="@drawable/ic_heart_full_24dp_grey"-->
                <!--tools:text="1,000,000 likes"-->
                <!--style="@style/Widget.Plaid.InlineActionButton" />-->

            </LinearLayout>


            <com.sinyuk.jianyi.widgets.ReadMoreTextView
                android:id="@+id/description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/material_text_body2"
                app:trimLength="40"
                tools:text="@string/fake"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/comments_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>


