<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:activityOpenEnterAnimation">@anim/activity_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_out</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
    </style>



    <style name="SquareTextView">
        <!-- some graphical improvements just for the demo. feel free to remove -->
        <!--<item name="@android:attr/padding">5dp</item>-->
        <item name="@android:attr/gravity">center</item>

        <!-- use the next line to alter the minimum text size (uncomment first)-->
        <item name="@attr/minTextSize">5dp</item>
    </style>

    <color name="colorPrimaryDark">#019B79</color>
    <color name="colorPrimary">#01D8A9</color>
    <color name="colorPrimaryLt">#50f9b2</color>
    <color name="colorAccent">#25c4ec</color>
    <color name="colorAccentLight">#45daff</color>
    <color name="colorAccentDark">#02acd7</color>
    <color name="colorPrimaryDarkLight">#5ae4c5</color>
    <color name="colorPrimaryLight">#50f9b2</color>
    <color name="window_background">#f5f5f5</color>

    <!-- common colours -->
    <color name="text_primary_dark">#DE000000</color> <!-- 87% -->
    <color name="text_secondary_dark">#8A000000</color> <!-- 54% -->
    <color name="text_tertiary_dark">#61000000</color> <!-- 38% -->
    <color name="text_primary_light">#FFFFFFFF</color>
    <color name="text_secondary_light">#B3FFFFFF</color> <!-- 70% -->
    <color name="text_disabled_light">#4DFFFFFF</color> <!-- 30% -->

    <color name="grey_900">#ff212121</color>
    <color name="grey_850">#ff303030</color>
    <color name="grey_800">#ff424242</color>

    <color name="grey_600">#ff757575</color>
